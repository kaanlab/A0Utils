<Window x:Class="A0Utils.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A0Utils.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="GroupedUpdateModels" Source="{Binding UpdateModels}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="Загрузка обновлений для программы А0" FontSize="16"/>
        <Button Grid.Row="0" Grid.ColumnSpan="2" Content="Настройки" Command="{Binding OpenSettingsCommand}" HorizontalAlignment="Right" Margin="0,10" Padding="5"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding InfoMessage, UpdateSourceTrigger=PropertyChanged}" Foreground="Navy" FontSize="16" Margin="5,0"/>
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="5">
            <Label Content="Выберите лицензию из списка" />
            <ComboBox ItemsSource="{Binding Licenses}" SelectedItem="{Binding SelectedLicense}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right">
            <Button Grid.Column="1" Content="Управление лицензиями" Command="{Binding OpenLicenseCommand}" Margin="5" Padding="5" />
            <Button Grid.Column="1" Content="Обновить список" Command="{Binding RefreshLicensesCommand}" Margin="5" Padding="5" />
        </StackPanel>
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Text="{Binding A0LicenseExp, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="5"  Grid.ColumnSpan="2" Text="{Binding PIRLicenseExp, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="6" Grid.ColumnSpan="2" Text="{Binding SubscriptionLicenseExp, UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="7" Grid.Column="1" Content="Получить информацию" Command="{Binding GetLicenseInfoCommand}" HorizontalAlignment="Right" Margin="0,10" Padding="5" />
        <DataGrid Grid.Row="8" Grid.ColumnSpan="2" ItemsSource="{Binding Source={StaticResource GroupedUpdateModels}}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True">
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="20">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="420"/>
                <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="70"/>                
            </DataGrid.Columns>
        </DataGrid>
        <ProgressBar Grid.Row="9" Grid.ColumnSpan="2" Minimum="0" Maximum="100" Value="{Binding DownloadProgress}" Height="25" Margin="0,5"/>
        <Button Grid.Row="10" Content="Обзор" Command="{Binding SaveToCommand}" HorizontalAlignment="Right" Margin="10" Padding="5" />
        <TextBlock Grid.Row="10" Text="{Binding DownloadPath, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left" Margin="10" Padding="5"/>
        <Button Grid.Row="10" Grid.Column="2" Content="Скачать" Command="{Binding DownloadSelectedCommand}" HorizontalAlignment="Right" Margin="0,10" Padding="5" />
        <StatusBar VerticalAlignment="Bottom" Background="LightGray" Grid.Row="11" Grid.ColumnSpan="2" >
            <StatusBarItem>
                <Label Content="{Binding AssemblyCopyright}" DockPanel.Dock="Top" />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <Label Content="{Binding AssemblyCompany}" DockPanel.Dock="Top" />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <Label Content="{Binding AssemblyVersion}" DockPanel.Dock="Top" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
